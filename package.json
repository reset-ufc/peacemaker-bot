{
  "name": "thepeacemakerbot",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "A bot to analyze Github comments and moderate them",
  "author": "Eric Mesquita <eric@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/reset-ufc/peacemaker-bot",
  "keywords": [
    "probot",
    "github",
    "probot-app"
  ],
  "scripts": {
    "start": "probot run ./index.js",
    "dev": "tsup ./src --format cjs --no-splitting --clean && probot run ./dist/app/index.cjs",
    "build": "tsup ./src --format cjs --no-splitting --clean",
    "lint": "eslint .",
    "format": "prettier --write src/**/*.js"
  },
  "dependencies": {
    "@ai-sdk/groq": "^1.1.12",
    "ai": "^4.1.54",
    "axios": "^1.6.8",
    "dotenv": "^16.4.1",
    "googleapis": "144.0.0",
    "groq-sdk": "^0.12.0",
    "mongodb": "^6.5.0",
    "mongoose": "^8.12.1",
    "perspective-api-client": "^3.1.0",
    "probot": "^13.4.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@types/node": "^22.13.9",
    "eslint": "^9.18.0",
    "globals": "^15.14.0",
    "prettier": "^3.4.2",
    "smee-client": "^2.0.4",
    "ts-node": "^10.9.2",
    "tsup": "^8.4.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2"
  },
  "engines": {
    "node": ">= 20"
  }
}